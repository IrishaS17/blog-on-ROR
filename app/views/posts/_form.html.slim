-if @post.errors.any?
  .alert.alert-danger
    h5 = t('common.errors')
    ul
      - @post.errors.full_messages.each do |message|
       li = message

= form_for @post, html: {multipart: true} do |p|
  .form-group
    = p.label :title
    = p.text_field :title, {:class => "form-control"}
  .form-group
  	= p.label :preview 
    = p.text_area :preview, {:class => "form-control"}
  .form-group
  	= p.label :body 
  	= p.text_area :body, {:class => "form-control"}
  .form-group
    = p.label :image
    br
    = p.file_field :image 
    
  .form-group
  	input.btn.btn-primary type="submit" value = t('posts.forms.submit') 
    /t('.submit', action: @post.new.record? ? 'Стварыць' : 'Змянiць') 
    =link_to t('common.back'), :back, { :class=>"btn btn-back" } 