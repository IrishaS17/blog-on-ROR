html
  head
    title Irish Blog
    = csrf_meta_tags 
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
    script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    header.navbar.navbar-inverse.bg-inverse.navbar-toggleable-md.navbar-light.bg-faded
      nav.container
        a.navbar-brand href="/posts" IrishBlog
        div.collapse.navbar-collapse id="navbarNavDropdown"
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link href="/posts" =t('.news')
              span.sr-only (current)
            li.nav-item
              a.nav-link href="/posts" =t('.followers')
            li.nav-item
              a.nav-link.disabled href="#" Disabled
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" =t('.language')
              ul.dropdown-menu aria-labelledby="navbarDropdownMenuLink"
                li.dropdown-item =link_to 'Беларуская', locale: "by"
                li.dropdown-item =link_to 'Русский', locale: "ru"
                li.dropdown-item =link_to 'English', locale: "en"
          a.btn.btn-outline-primary.pull-xs-right href="/posts/new" =t('.write') 
          a.btn.btn-outline-primary.pull-xs-right href="#" 
            img src="/assets/images/menu/login.png"
          a.btn.btn-outline-primary.pull-xs-right href="#" =t('.registration') 
                 
    div.container.main   
      =yield 


      