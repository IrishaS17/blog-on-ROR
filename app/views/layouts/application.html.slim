html
  head
    title Irish Blog
    = csrf_meta_tags 
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
    script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'  
  body
    header.navbar.navbar-inverse.bg-inverse.navbar-toggleable-md
      div.container
        -if user_signed_in? && current_user.admin? 
          =link_to 'IrishBlog::admin', posts_path, {:class=>"navbar-brand"}
        -else
          =link_to 'IrishBlog', posts_path, {:class=>"navbar-brand"}
        end
        div.collapse.navbar-collapse id="navbarNavDropdown"
          ul.navbar-nav.mr-auto
            li class="nav-item ='active' if current_page?(root_path) || current_page?(posts_path)"
              =link_to t('.news'), posts_path, {:class=>"nav-link"}
              span.sr-only (current)
            li.nav-item
              =link_to t('.users'), users_path, {:class=>"nav-link"}
            -if user_signed_in? && current_user.admin?      
              li.nav-item
                =link_to t('common.categories'), admin_categories_path, {:class=>"nav-link"} 
            end
            li.nav-item
              =link_to t('.followers'), posts_path, {:class=>"nav-link"}
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" =t('.language')
              ul.dropdown-menu aria-labelledby="navbarDropdownMenuLink"
                li.dropdown-item =link_to 'Беларуская', locale: "by"
                li.dropdown-item =link_to 'Русский', locale: "ru"
                li.dropdown-item =link_to 'English', locale: "en"
          -if user_signed_in?
            li.nav-item
              =link_to t('.write'), new_admin_post_path, {:class=>"btn btn-outline-primary pull-xs-right"} 
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" =t('current_user.name')
              ul.dropdown-menu aria-labelledby="navbarDropdownMenuLink"
                =link_to t('.exit'), destroy_user_session_path, method: :delete, class: "dropdown-item"
          -else
            li.nav-item
              =link_to t('.sign_in'), new_user_session_path, {:class=>"btn btn-outline-primary pul-xs-right"}
              '&nbsp;
              =link_to t('.registration'), new_user_registration_path, {:class=>"btn btn-outline-primary pul-xs-right"}
          end
                   
    div.container.main
      div.row
        div.col-md-9
          -flash.each do |name, message|
            div.alert class= bootstrap_class_for(name)
              button.close data-dismiss="alert" &times;
              =message
          end
          =yield 
        div.col-md-3
          =render 'shared/submenu'
          div.tag_cloud
            /h2 =t('.tags_cloud')
            div#myCanvasContainer
              canvas#myCanvas width="300" height="300"
                ul
                  - tag_cloud Tag.counts, %w{xs s m l xl} do |tag, css_class|
                    li 
                      =link_to tag.name, tag_path(tag.name), class: css_class 
         
           
            